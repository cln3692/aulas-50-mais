@Model PessoaJuridica

<h1>@Model.Nome</h1>
<hr />
<small><a href="/PessoaJuridica">Voltar</a></small>

<div class="alert alert-primary" >
  Saldo da conta: @Model.ContaCorrente.Saldo
</div>
<p><strong>Nº da Conta:</strong> @Model.ContaCorrente.NumeroDaConta</p>
<br />
<p><strong>Endereço</strong>: @Model.Endereco</p>

<form method="post" asp-action="Deletar" asp-route-id="@Model.Id">
    <input type="submit" class="btn btn-danger" value="Excluir" />
</form>